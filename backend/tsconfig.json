{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node"],
    "moduleResolution": "node"
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
